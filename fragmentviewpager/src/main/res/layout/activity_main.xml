<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.android.fragmentviewpager.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtToutiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="头条"
            android:textColor="#0000ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtBaike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="百科"
            android:textColor="#999999"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新闻"
            android:textColor="#999999"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtJingying"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="经营"
            android:textColor="#999999"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtZixun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="咨询"
            android:textColor="#999999"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 2.	 滑块 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivToutiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0000"
            />

        <ImageView
            android:id="@+id/ivBaike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
             />

        <ImageView
            android:id="@+id/ivData"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
             />

        <ImageView
            android:id="@+id/ivJingying"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
             />

        <ImageView
            android:id="@+id/ivZixun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
